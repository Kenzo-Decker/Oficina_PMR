<%= render "layouts/navbar" %>

<div class='flex flex-col w-full justify-center items-center bg-gray-200 py-40'>
    <p id="notice" class='py-5'><%= notice %></p>

    <div class='flex flex-col justify-between'>

      <p class='titulo'>Detalhes do agendamento</p>

      <p class='pb-3'>
        <strong>Data:</strong>
        <%= @formulario_certo.data %>
      </p>
      
      <p class='pb-3'>
        <strong>Departamento:</strong>
        <%= @formulario_certo.departamento %>
      </p>
      
      
      <p class='pb-3'>
        <strong>Nome do projeto:</strong>
        <%= @formulario_certo.nome_projeto %>
      </p>
      
      <p class='pb-3'>
        <strong>Tipo de projeto:</strong>
        <%= @formulario_certo.tipo_projeto_string %>
      </p>
      
      <p class='pb-3'>
        <strong>Orientador:</strong>
        <%= @formulario_certo.orientador %>
      </p>
      
      <p class='pb-3'>
        <strong>Máquina:</strong>
        <%= @formulario_certo.maquina %>
      </p>
      
      <p class='pb-3'>
        <strong>Ferramentas próprias:</strong>
        <% if @formulario_certo.ferramentas_proprias == true %>
        Sim
        <% else %>
        Não
        <% end %>
      </p>
      
      <p class='pb-3'>
        <strong>Estado:</strong>
        <% if @formulario_certo.estado %>
        <%= @formulario_certo.estado %>
        <% else %>
        Aguardando deferimento
        <% end %>
      </p>
      
      <p class='pb-3'>
        <strong>Material:</strong>
        <%= @formulario_certo.material %>
      </p>
      
      <p class='pb-3'>
        <strong>Desenho peca:</strong>
        <%= @formulario_certo.desenho_peca %>
      </p>
  
      <div class='flex flex-row justify-between pt-4 px-2'>
        <button class='btn'><%= link_to 'Ok', formulario_certos_path %></button>
        <% if current_user.role != 'aluno' %>
        <button class='btn'><%= link_to 'Editar', edit_formulario_certo_path(@formulario_certo) %></button>
        <% end %>
      </div>
    </div>
    
</div> 

<%= render "layouts/footer" %>
