<%= render "layouts/navbar" %>

<div class='flex flex-col w-full justify-center items-center bg-gray-200 py-40'>
    <p id="notice" class='py-5'><%= notice %></p>

    <div class='flex flex-col justify-between'>
      <p class='pb-3'>
        <strong>Nome:</strong>
        <%= @machine.name %>
      </p>
      
      <p class='pb-3'>
        <strong>Status atualizado:</strong>
        <% if @machine.state == 'manut' %>
          Em manutenção
        <% elsif @machine.state == 'ocup' %>
          Ocupado
        <% else %>
          Disponível
        <% end %>
      </p>
  
      <div class='flex flex-row justify-between pt-4 px-2'>
        <button class='btn'><%= link_to 'Voltar', machines_path %></button>
        <button class='btn'><%= link_to 'Editar', edit_machine_path(@machine) %></button>
      </div>
    </div>
    
</div> 

<%= render "layouts/footer" %>

