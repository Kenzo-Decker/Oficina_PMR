<p id="notice"><%= notice %></p>

<%= render "layouts/navbar" %>

<div class='flex flex-col w-full justify-center items-center bg-gray-200 py-20'>
    <div>
        <p class='titulo'>Máquinas</p>
    </div>

    <table class='flex flex-col justify-between items-center'>
      <thead class='flex flex-row'>
        <tr>
          <th>Nome</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @machines.each do |machine| %>
          <tr>
            <td><%= machine.name %></td>
            <td><%= machine.state %></td>
            <td><%= link_to 'Show', machine %></td>
            <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
            <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class='pt-5'>
      <button class='btn'>
        <a href="../">Voltar</a>
      </button>
      <button class='btn'>
        <%= link_to 'Nova Máquina', new_machine_path %>
      </button>
    </div>
    
    
</div>

<%= render "layouts/footer" %>


