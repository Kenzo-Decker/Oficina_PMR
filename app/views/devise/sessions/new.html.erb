<%= render "layouts/navbar" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <%= image_pack_tag 'media/img/usp-preto.png', size: 'mx-auto h-12 w-auto', alt: 'USP-logo' %>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Acesse sua conta
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Ou <%= link_to "crie sua conta", new_registration_path(resource_name) %>
        </p>
      </div>
      <form class="mt-8 space-y-6" action="#" method="POST">
        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <div class="sr-only">
              <%= f.label :Email_USP%><br />
            </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md', placeholder:"Email USP" %>
          </div>
          <div>
            <div class="sr-only">
            <%= f.label :Senha %><br />
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class:'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md', placeholder:"Senha" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="field">
            <%= f.check_box :remember_me, class:'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' %>
            <%= f.label :Lembrar_me, class:'ml-2 block text-sm text-gray-900' %>
            </div>
          </div>

          <div class="text-sm">
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
          </div>
        </div>

        <div>
          <div class="actions">
          <%= f.submit "Entrar", class:'group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-amarelo hover:bg-amarelo-escuro focus:outline-none' %>
          </div>
        </div>
      </form>
    </div>
  </div>
<% end %>

<%= render "layouts/footer" %>


