<div class="flex flex-col bg-home bg-opacity-20 max-h-full z-10">

    <div class='py-8'></div>

    <nav class="fixed w-full bg-white transition ease-linear duration-300" id="nav">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-20">
        <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
                <!-- Logo -->
            <div class="flex-shrink-0 h-14 py-3">
                <a href="/" class="transition ease-linear duration-300" id="logo-black">
                    <%= image_pack_tag 'media/img/usp-preto.png', size: '250x45', alt: 'USP-logo' %>
                </a>
            </div>
            </div>
            <div class="hidden md:block">

            <div class="ml-4 flex flex-row items-center md:ml-6 transition ease-linear duration-300">
                <!-- Logado como (email) n達o mobile -->
                <p class='text-yellow-500 font-semibold pr-5' id="logado-como">Logado como <%= current_user.try(:email) %></p>
                <!-- Bot達o de logout n達o mobile -->
                <button class="btn">
                    <div>
                        <i class="fas fa-sign-out-alt fa-sm white"></i>
                        <%= link_to "Sair", destroy_user_session_path, method: :delete %>
                    </div>
                </button>
            </div>
            </div>
        </div>
        </div>
    </nav>

    <div class="fixed my-16 w-full bg-yellow-500 flex flex-row items-center justify-between md:hidden shadow-md transition ease-linear duration-500">
        <!-- Logado como (email) mobile -->
        <p class='text-yellow-500 float-left pl-4'>Logado como <%= current_user.try(:email) %></p>
        <!-- Bot達o de logout mobile -->
        <button class="flex-grow font-medium py-0.5 px-8 rounded-md text-white focus:outline-none mx-auto">
            <div class='float-right'>
                <i class="fas fa-sign-out-alt fa-sm white"></i>
                <%= link_to "Sair", destroy_user_session_path, method: :delete %>
            </div>
        </button>
    </div>

</div>

<script type="text/javascript">
     
    var nav = document.getElementById('nav');
    var sticky = nav.offsetTop;

    window.onscroll = function(){
        if (window.pageYOffset > sticky) {
            nav.classList.add('scroll');
        }
        else {
            nav.classList.remove('scroll');
    }
}
</script>