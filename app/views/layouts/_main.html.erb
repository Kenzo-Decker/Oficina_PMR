<script type="text/javascript">

    // var t1_status = PUXAR DO BD

    // VALORES TESTE
    // const t1_status = 'disp'
    const t1_status = 'ocup'
    // var t1_status = 'manut'

    var btn = document.getElementById('botao');

    var t1_icon = document.getElementById('t1-i'),
        t1_text = document.getElementById('t1-t');

    btn.onclick = function(){
        if (t1_status == 'disp') {
            t1_icon.classList.remove('fa-wrench', 'vermelho');
            t1_icon.classList.remove('fa-user-clock', 'laranja');
            t1_icon.classList.add('fa-check', 'verde');
            t1_text.textContent = 'Disponível';
        }
        else if (t1_status == 'ocup') {
            t1_icon.classList.remove('fa-wrench');
            t1_icon.classList.add('fa-user-clock');
            t1_icon.classList.remove('fa-check');
            t1_text.textContent = 'Ocupado';
        }
        else {
            t1_icon.classList.add('fa-wrench');
            t1_icon.classList.remove('fa-user-clock');
            t1_icon.classList.remove('fa-check');
            t1_text.textContent = 'Em manutenção';
        }
}
</script>

